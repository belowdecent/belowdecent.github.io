---
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <div class="logo">BELOWDECENT</div>
  <nav>
    <ul role="list">
      <HeaderLink linkTo="/">Главная</HeaderLink>
      <HeaderLink linkTo="/projects">Проекты</HeaderLink>
    </ul>
  </nav>
</header>

<style lang="scss">
  header {
    display: flex;
    background: rgb($black);
    color: rgb($white);
    min-height: $header-height;
    line-height: $header-height * 0.75;
    align-items: center;
    padding-inline: 1rem;
    gap: 1rem;
  }

  ul {
    display: flex;
    gap: 1rem;
    height: 100%;
  }
</style>
