---
import HeaderLink from "./HeaderLink.astro";
---

<header>
	<div class="logo">
		<img
			src="logo.png"
			width="256"
			height="128"
			alt="belowdecent"
		/>
	</div>
	<nav>
		<ul role="list">
			<HeaderLink linkTo="/">Главная</HeaderLink>
		</ul>
	</nav>
</header>

<style lang="scss">
	header {
		display: flex;
		background: rgb($black);
		color: rgb($white);
		align-items: top;
		gap: 1rem;
		border-block: solid 2px;
		border-color: rgb($accent-blue);
	}

	ul {
		display: flex;
		gap: 1rem;
		height: 100%;
	}

	.logo {
		img {
			image-rendering: pixelated;
			display: block;
		}
	}
</style>
