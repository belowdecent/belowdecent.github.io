---
interface Props {
  linkTo: string;
  title: string;
}

const { linkTo, title } = Astro.props;
---

<div class="card">
  <div class="head">
    <h4>{title}</h4>
    <a href={linkTo}>{linkTo}</a>
  </div>
  <p>
    <slot />
  </p>
</div>

<style lang="scss">
  .card {
    border-radius: 1.2rem;
    position: relative;
    margin-block: 0.5rem;
    padding: 1.2rem;
    background: rgb($white);
    color: rgb($black);
    box-shadow: 0.1rem 0.1rem 0.3rem 0 rgb(rgb($white), 0.5);
  }

  .head {
    width: 100%;
    border-bottom: 1px rgb(rgb($black), 0.3) solid;
    padding-bottom: 0.5rem;
    margin-bottom: 0.5rem;
  }

  p,
  a {
    font-size: 0.8rem;
  }

  a,
  a:any-link {
    text-decoration: none;
    color: rgb($accent-blue);
  }


  h4 {
    line-height: 1;
  }
</style>
